
public class Hipotecario implements Prestamo {

	private int cuota;
	
	
	
	
	
	public int getCuota() {
		return cuota;
	}




	public void setCuota(int cuota) {
		this.cuota = cuota;
	}



	

	public String darPrestamo(float monto,float sueldo, int cuotas) {
		
		cuota = (int)((monto * 1.3) / cuotas);
		
				
		if(cuota < (sueldo * 0.4)){
	
			return "Se otorgó el prestamo hipotecario\n"+"Sueldo: "+sueldo+"\nInteres final: "+(monto*1.3)+"\nPesos x Cuota: "+getCuota()+"\nCuota según su sueldo: "+sueldo*0.4+"\nCantidad de Cuotas: "+cuotas;		
		}
		
		else
			return "No se autorizó el prestamo\n"+"Tendría que pagar x Cuota: "+getCuota()+"\nSu cuota según su sueldo: "+sueldo*0.4;
	}	

}
