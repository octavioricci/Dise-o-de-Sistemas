
public class Hipotecario implements Prestamo {

	private int cuota;
	
	
	
	
	
	public int getCuota() {
		return cuota;
	}




	public void setCuota(int cuota) {
		this.cuota = cuota;
	}



	

	public String darPrestamo(float monto,float sueldo, int cuotas) {
		
		cuota = (int)((sueldo * 1.3) / cuotas);
		
				
		if(cuota < (sueldo * 0.4)){
	
			return "Se otorgó el prestamo hipotecario\n"+"Sueldo: "+sueldo+"\nInteres final: "+(sueldo*1.3)+"Pesos x Cuota: "+getCuota()+"\nCantidad de Cuotas: "+cuotas;		
		}
		
		else
			return "No se autorizó el prestamo\n"+" Pesos x Cuota: "+getCuota();
	}	

}
